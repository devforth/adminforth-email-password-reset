{
  "name": "@adminforth/email-password-reset",
  "version": "1.0.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && rsync -av --exclude 'node_modules' custom dist/ && npm version patch",
    "prepare": "npm link adminforth"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devforth/adminforth-email-password-reset.git"
  },
  "keywords": [
    "adminforth",
    "password reset"
  ],
  "author": "devforth",
  "license": "ISC",
  "description": "Email password reset plugin for adminforth",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.654.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "semantic-release": "^24.2.1",
    "semantic-release-slack-bot": "^4.0.2",
    "typescript": "^5.7.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "semantic-release-slack-bot",
        {
          "notifyOnSuccess": true,
          "notifyOnFail": true,
          "slackIcon": ":package:",
          "markdownReleaseNotes": true
        }
      ]
    ],
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  }
}
